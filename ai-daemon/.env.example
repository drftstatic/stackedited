# StackEdit AI Daemon Configuration
# Copy this file to .env and customize as needed

# Server port (default: 3001)
AI_DAEMON_PORT=3001

# Allowed origins for CORS (comma-separated, or * for all)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8081

# Default AI provider: claude, gemini, or codex
DEFAULT_AI_PROVIDER=claude

# CLI paths (leave empty to use PATH lookup)
CLAUDE_CLI_PATH=
CODEX_CLI_PATH=
GEMINI_CLI_PATH=

# Model overrides (optional)
CLAUDE_MODEL=claude-opus-4-5-20251101
CODEX_MODEL=gpt-5-codex
GEMINI_MODEL=gemini-3-pro-preview

# Z.AI (Chinese AI company - glm models)
ZAI_API_KEY=
ZAI_MODEL=glm-4.6

# Cursor subscription (runs both Grok and Composer via cursor-agent)
# NOTE: This API key is tied to your Cursor subscription, not per-call billing
CURSOR_CLI_PATH=cursor-agent
CURSOR_API_KEY=your_cursor_api_key_here

# Cursor Models
CURSOR_MODEL=grok        # X.AI's Grok
COMPOSER_MODEL=composer-1 # Cursor's Composer model
